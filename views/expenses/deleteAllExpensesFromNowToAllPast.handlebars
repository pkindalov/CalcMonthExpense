<div class="container">
    <div class="row">
        <div class="col-lg-12">
            {{#if notAvailable}}
                 <h3>Sorry.. nothing found about this period..</h3>

            {{else}}
                <h3>Count of founded results {{expenses.length}}</h3>
                <hr />

                <p>You have expenses for the following dates:</p>
                <ul>
                 {{#each expenses}}
                    <li>
                        <a class="btn btn-default" href="/expenseDetails?id={{this._id}}">{{this.formattedDate}}</a>
                    </li>
                 {{/each}}
                </ul>
                <hr />


              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deleteAllExpensesModal">Delete</button>

              <form method="POST" action="">
                  
                        <!-- Modal -->
                        <div class="modal fade" id="deleteAllExpensesModal" tabindex="-1" role="dialog" aria-labelledby="deleteAllExpensesModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteAllExpensesModalLabel">Confirm Delete All Expenses?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure to remove all expenses for this period ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button class="btn btn-danger" type="submit">Go DELETE</button>
                                
                            </div>
                            </div>
                        </div>
                        </div>


              </form>

            {{/if}}
        </div>
    </div>
</div>